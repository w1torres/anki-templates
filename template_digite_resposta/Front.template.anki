<script>
// Fun√ß√£o para gerar os placeholders de letras do termo
function getTermPlaceholders(term) {
  return term.split('').map(() => `<span class="term-placeholder" data-empty="true">üî≤</span>`).join(' ');
}

// Fun√ß√£o para embaralhar o termo e criar bot√µes
function generateCard() {
  const definitionText = "{{Definicao}}"; // O texto do cart√£o da frente (a ser substitu√≠do no Anki)

  // Usando regex para extrair o conte√∫do dentro de []
  const regex = /\[([^\]]+)\]/;
  const match = definitionText.match(regex);

  let termText = ""; // O termo a ser embaralhado

  if (match && match[1]) {
    termText = match[1]; // Ex: "Big Data"
  }

  // Substitui o termo na defini√ß√£o por placeholders (üî≤)
  const displayDefinition = definitionText.replace(regex, getTermPlaceholders(termText));
  document.querySelector(".question-box").innerHTML = displayDefinition; // Exibe a defini√ß√£o com os placeholders
}

generateCard();
</script>